/* pages/meals/index.wxss */
page {
    background-color: rgb(243, 241, 241);
}

.page-core {
  padding-top: 10px;
  height: calc( 100vh - 100px )
}

.page-item {
  width: 96vw;
  /* height: 160px; */
  height: 196px;
  margin: auto;
  background: #fff;
  overflow: hidden;
  position: relative;
  border-radius: 8px;
  border: 1px solid #eee;
  border-top: 0;
  margin-bottom: 15px;
  box-shadow: 3px 3px 5px #f5f5f5;
}

.page-item image {
  width: 100%;
  height: 128px;
  border-radius: 8px 8px 0 0;
}

.group-title {
  margin-top: 1px;
  font-size: 18px;
  padding-left: 4px;
  color: #444;
  font-weight: bold;
}

.group-other {
  margin-top: 1px;
  display: flex;
  flex-direction: row
}

.group-price {
  width: 30%;
  padding-top: 3px;
   display: flex;
  align-items: center
}

.practical-price {
  font-size: 18px;
  font-weight: bold;
  color: #B63B41;
}
.original-price {
  color: #555;
  font-size: 14px;
  margin-left: 12px;
  text-decoration: line-through ;
  font-weight: bold;
}

.group-org-price {
  width: 30%;
}

.group-opt {
  background: #956134;
  color: #fff;
  width: 75px;
  height: 32px;
  font-size: 13px;
  line-height: 32px;
  text-align: center;
  border-radius: 18px;
  position: absolute;
  right: 6px;
  margin-top: -10px;
}

.group-usernum {
  font-size: 12px;
  background: #FF3B30;
  height: 20px;
  width: 100px;
  color: #fff;
  line-height: 20px;
  padding-left: 30px;
  transform: rotate(320deg);
  position: absolute;
  top: 0;
  left: -25px;
}


.i-card {
  margin: 0 16px 10px 16px;
  font-size: 14px;
  overflow: hidden;
  position: relative;
  background: #fff;
  border: 1rpx solid #dddee1;
  border-radius: 5px;
}
.i-card-header {
  display: flex;
  padding: 6px 16px;
  align-items: center;
  border-bottom: 1px #dddee1 dashed;

}

.i-card-img{
  display: inline-block;
  width: 80px;
  height: 80px;
  position: relative;
  overflow: hidden;
  background-size: cover;
  vertical-align: middle;
}
.i-card-footer {
  position: relative;
  padding: 6px 16px;
  color: #80848f;
  font-size: 12px;
  text-decoration: line-through ;
}
.i-card-body {
  position: relative;
  padding: 6px 16px;
  color: #B63B41;
  font-size: 14px;
  font-weight: 600
}
.i-card-buy{
  height: 35px;
  width:80px;
  background: #B63B41;
  border-radius: 15px;
  line-height:2;
  margin-right: 15px;
}