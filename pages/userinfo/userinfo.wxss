page{
  background: #fff;
}
.opt-but {
  width: 35vw;
  height: 35px;
  text-align: center;
  background: #2C9F67;
  color: #fff;
  line-height: 35px;
  font-size: 18px;
  border-radius: 3px;
}
.opt-but-cancel {
  width: 35vw;
  height: 35px;
  text-align: center;
  background: #ff0000;
  color: #fff;
  line-height: 35px;
  font-size: 18px;
  border-radius: 3px;
}
.auth-img {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 38px;
  width: 100%;
  height: 280px;
}
.auth-img image {
  width: 180px;
  height: 200px;
}

.auth-title {
  margin-top: 40px;
  padding: 0 30px;
  font-size: 16px;
  color: #333;
}
.auth-tips {
  padding: 0 30px;
  color: #555;
  font-size: 12px;
  margin-top: 10px;
  margin-bottom: 30px;
}

.opt-but image {
  width: 18px;
  height: 18px;
}
.info {
  background: #fff;
  border-top: 6px solid #eee;
}

.info-item {
  display: flex;
  border-bottom: 1px solid #eee;
  font-size: 15px;
  width: 90%;
  margin: auto;
  padding: 14px 2px;
}

.item-name {
  width: 50%;
  color: #3A3A3A;
  display: flex;
  align-items: center;
}

.item-text {
  width: 50%;
  text-align: right;
  color: #999;
}

.item-text image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 1px solid #eee;
}

.exit {
  margin-top: 30px;
  background: #FF2DCD;

  color: #fff;
  width: 94%;
  border: 0;
  height: 38px;
  line-height: 38px;
  font-size: 16px;
}

.opt-area {
  position: fixed;
  bottom: 80px;
  left: 0;
}