
scroll-view {
  height: calc( 100vh - 55px )
}

.swiper-img {
  height: 48vh;
}

.cons-empty {
  height: 10px;
  background: #eee
}

.tips-user-num {
  margin-top: 3px;
  color: #fff;
  border-radius: 2px;
  font-size: 14px;
  margin-left: 10px;
  background:  	#8B1A1A;
  line-height: 20px;
  height: 20px;
  /* width: 70px; */
  text-align: center;
}

.tips-discounts {
  font-size: 20px;
  font-weight: bold;
}

.tips-practical {
  font-size: 14px;
  color: #888;
  margin-left: 5px;
  font-weight: bold;
  text-decoration: line-through;
  margin-top: 5px;
}

.tips-data {
  margin-top: 5px;
  font-size: 12px;
  margin-left: 3px;
  color: #555;
}

.tips-data text {
  background: rgb(202, 115, 60);
  padding: 1px 3px;
  font-size: 10px;
  border-radius: 3px;
  margin: 0 3px; 
  color: #eee;
  display: inline-block;
}

.group-item {
  border-top: 10px solid #f3f3f3;
}

.item-title {
  font-size: 14px;
  color: #333;
  padding: 8px 10px;
  border: 1px solid #f8f8f8;
}

.item-title-icon {
  width: 10px;
  height: 10px;
  background: #333;
  display: inline-block;
  transform: rotate(45deg);
  margin-right: 2px;
  border-radius: 2px;
}

.group-regimental {
  display: flex;
  width: 92vw;
  height: 50px;
  margin: auto;
  border-bottom: 1px solid #f5f5f5;
}

.regimental-image {
  width: 20%;
}

.regimental-name {
  width: 35%;
  line-height: 50px;
}

.regimental-date {
  width: 30%;
  text-align: center;
}

.regimental-image image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-top: 5px;
}

.regimental-name {
  font-size: 14px;
  color: #555;
}
.regimental-date {
  font-size: 12px;
  margin-top: 10px;
}

.regimental-opt {
  /* background: #40220F; */
  color: #fff;
  border-radius: 3px;
  background: #956134;
  width: 70px;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  text-align: center;
  margin-top: 10px;
}


.cart-show-submit {
  height: 50px;
  width: 100vw;
  display: flex;
  position: fixed;
  bottom: 0;
  font-size: 16px;
  z-index: 101;
  border-top: 1px solid #f5f3f3;
  background: #f5f5f5;
}

.cart-showtotal {
  width: 60vw;
  background: #fff;
  line-height: 50px;
  padding-left: 20px;
  color: #555;
  font-size: 16px;
  display: flex;
  font-weight: bold;
}

.cart-showtotal view {
  color: #40220F;
  margin-left: 5px;
  font-weight: bold;
  font-size: 18px;
}

.cart-submit{
  width: 40vw;
  background: #956134;
  color: #fff;
  text-align: center;
  line-height: 40px;
  height: 40px;
  border-radius: 3px;
  margin-top: 5px;
  margin-right: 8px;
}

.group-name {
  color: #333;
  font-size: 18px;
  font-weight: bold;
  margin-left: 5px; 
}

.group-explain {
  border-top: 1px solid #f5f5f5;
  font-size: 12px;
  padding: 10px;
  color: #333;
  /* background: #bbb; */
}

.group-explain view {
  margin-bottom: 2px; 
  padding-left: 10px;
}

.group-explain-text {
  display: inline-block;
  background: #999;
  color: #fff;
  width: 15px;
  height: 15px;
  font-size: 10px;
  line-height: 15px;
  text-align: center;
  border-radius: 50%;
  margin-right: 5px;
}


.cart-image {
  width: 45px;
  height: 45px;
}

.regimental-date-jldata {
  color: #999;
  font-size: 10px;
}

.regimental-date-usernum text{
  color: red;
  margin: 0 3px;
  font-weight: bold;
}

.group-info {
  /* border: 1px solid #333; */
  display: flex;
  position: relative;
  margin-top: 2px;
}

.group-price {
  display: flex;
  margin: 5px 3px;
}
.payWay{
  height: 40px;
  border-bottom: 1px rgba(2, 2, 2, 0.1) dashed ;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction:row;
}
.picker{
  font-size: 15px;
  margin-left: 25px;
  color: #888;
}
.balance{
  font-size: 12px;
  color: rgba(85, 85, 85, 0.733)
}